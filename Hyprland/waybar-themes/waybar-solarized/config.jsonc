  "spacing": 4, // Gaps between modules (4px)
  "reload_style_on_change": true,
  "modules-left": [
    "custom/appmenu",
    "clock",
    "power-profiles-daemon",
    "backlight",
    "hyprland/language"
  ],
  "modules-center": ["custom/power", "hyprland/workspaces", "custom/noti"],
  "modules-right": [
    "temperature",
    "pulseaudio",
    "cpu",
    "memory",
    "tray",
    "battery"
